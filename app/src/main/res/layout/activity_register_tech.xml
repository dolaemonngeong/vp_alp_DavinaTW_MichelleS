<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3E3C97">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/shape"
                    android:layout_width="match_parent"
                    android:layout_height="610dp"
                    android:background="@drawable/white_shape"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/maintitle_regtech"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="48dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/source_sans_pro_bold"
                            android:text="Sign Up as Technician"
                            android:textColor="#000000"
                            android:textSize="40sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/reg_nametech"
                            android:layout_width="300dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="20dp"
                            android:backgroundTint="#000000"
                            android:ems="10"
                            android:fontFamily="@font/source_sans_pro"
                            android:hint="Full Name"
                            android:inputType="textPersonName"
                            android:textColorHint="#000000"
                            app:layout_constraintStart_toStartOf="@+id/maintitle_regtech"
                            app:layout_constraintTop_toBottomOf="@+id/maintitle_regtech" />

                        <EditText
                            android:id="@+id/reg_unametech"
                            android:layout_width="300dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="25dp"
                            android:backgroundTint="#000000"
                            android:ems="10"
                            android:fontFamily="@font/source_sans_pro"
                            android:hint="Username"
                            android:inputType="textPersonName"
                            android:textColorHint="#000000"
                            app:layout_constraintStart_toStartOf="@+id/reg_nametech"
                            app:layout_constraintTop_toBottomOf="@+id/reg_nametech" />

                        <EditText
                            android:id="@+id/reg_phonetech"
                            android:layout_width="300dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="25dp"
                            android:backgroundTint="#000000"
                            android:ems="10"
                            android:fontFamily="@font/source_sans_pro"
                            android:hint="Phone"
                            android:inputType="phone"
                            android:textColorHint="#000000"
                            app:layout_constraintStart_toStartOf="@+id/reg_unametech"
                            app:layout_constraintTop_toBottomOf="@+id/reg_unametech" />

                        <EditText
                            android:id="@+id/reg_emailtech"
                            android:layout_width="300dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="25dp"
                            android:backgroundTint="#000000"
                            android:ems="10"
                            android:fontFamily="@font/source_sans_pro"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:textColorHint="#000000"
                            app:layout_constraintStart_toStartOf="@+id/reg_phonetech"
                            app:layout_constraintTop_toBottomOf="@+id/reg_phonetech" />

                        <EditText
                            android:id="@+id/reg_passtech"
                            android:layout_width="300dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="25dp"
                            android:backgroundTint="#000000"
                            android:ems="10"
                            android:fontFamily="@font/source_sans_pro"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:textColorHint="#000000"
                            app:layout_constraintStart_toStartOf="@+id/reg_emailtech"
                            app:layout_constraintTop_toBottomOf="@+id/reg_emailtech" />

                        <EditText
                            android:id="@+id/reg_districttech"
                            android:layout_width="300dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="25dp"
                            android:backgroundTint="#000000"
                            android:ems="10"
                            android:fontFamily="@font/source_sans_pro"
                            android:hint="District"
                            android:inputType="textPersonName"
                            android:textColorHint="#000000"
                            app:layout_constraintStart_toStartOf="@+id/reg_passtech"
                            app:layout_constraintTop_toBottomOf="@+id/reg_passtech" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/button_registertech"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="580dp"
                    android:backgroundTint="#3E3C97"
                    android:text="register"
                    android:textColor="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:text="Already have an account?"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button_registertech" />

                <TextView
                    android:id="@+id/to_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="25dp"
                    android:clickable="true"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:text="Log In Here"
                    android:textColor="#F9B854"
                    app:layout_constraintStart_toEndOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/button_registertech"
                    tools:ignore="TouchTargetSizeCheck" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>